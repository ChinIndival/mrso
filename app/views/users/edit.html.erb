
<br><br>
<div class="container-fluid well span6">
	<div class="row-fluid">
    <div class="container">
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                <% provide(:title, "Edit user") %>
                <hr>
                <h3>Edit Profile</h3>
                
                <div class="row">
                  <div class="col-md-6 col-md-offset-3">
                     <%= form_for(@user) do |f| %>
                    
                        <%= f.label :email %>
                        <%= f.email_field :email, class: 'form-control' %>
                        <hr>
                        <%= f.submit "Save", class: "btn btn-success" %>
                        <hr>
                        <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
